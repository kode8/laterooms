{
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "window": true,
        "document": true
    },
    "settings": {
        "import/resolver": "webpack",
        "rules": {
            "no-console": "off",
            "react/jsx-filename-extension": [
                1,
                {
                    "extensions": [
                        ".js",
                        ".jsx"
                    ]
                }
            ],
            "prettier/prettier": [
                "error",
                {
                    "trailingComma": "es5",
                    "singleQuote": false,
                    "printWidth": 120,
                    "bracketSpacing": false
                }
            ],
            "indent": [
                "error",
                2
            ]
        }
    },
    "plugins": [
        "react",
        "jsx-a11y",
        "import",
        "prettier"
    ]
}